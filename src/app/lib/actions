'use server' 
import { signIn } from '@/auth'

export async function authenticate(_currentState, formData) {
  try {
    key = await signIn(formData)
  } catch (error) {
    if (error) {
      switch (error.type) {
        case 'CredentialsSignin':
          return 'Invalid credentials.'
        default:
          return 'Something went wrong.'
      }
    }
    throw error
  }
}